import tkinter as tk  # Tkinter-ді қосамыз

# Батырма басылғанда орындалатын функция
def say_hello():
    print("Сәлем, әлем!")

root = tk.Tk()
root.title("Button Мысалы")  # Терезе атауы
root.geometry("300x200")

# Батырманы құрамыз
button = tk.Button(root, text="Мені бас!", command=say_hello)
button.pack()  # Терезеге қосамыз

root.mainloop()